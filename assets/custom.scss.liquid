}

// picture to make wide on mobile only
.is-width-wide-mobile{
    @media only screen and (max-width:749px){
        width: 100%;

        .container{
            width: 100%;
            max-width: 100%;
            .column{
                margin-left: 0;
                margin-right: 0;
                width: 100%;
            }
        }
    }
}

